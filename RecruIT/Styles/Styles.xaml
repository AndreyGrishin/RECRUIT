    <DataTemplate x:Key="EmployeesTemplate">
        <Grid
            Height="280"
            MinHeight="210"
            Background="White"
            BorderBrush="#FF2079D3"
            BorderThickness="3">
            <StackPanel Margin="5,10,5,5" Orientation="Vertical">
                <Ellipse
                    Width="100"
                    Height="100"
                    Margin="20,0,27,0"
                    VerticalAlignment="Top"
                    Stroke="#FF449EDC"
                    StrokeThickness="3">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="ms-appx:///Resources/Images/hr.jpeg" Stretch="UniformToFill" />
                    </Ellipse.Fill>
                </Ellipse>
                <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                    <TextBlock Text="Имя:" />
                    <TextBlock
                        Margin="10,0,0,0"
                        Foreground="#FF858585"
                        Text="{Binding FirstName}" />
                </StackPanel>
                <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                    <TextBlock Text="Фамилия:" />
                    <TextBlock
                        Margin="10,0,0,0"
                        Foreground="#FF858585"
                        Text="{Binding LastName}" />
                </StackPanel>
                <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                    <TextBlock Text="Должность:" />
                    <TextBlock
                        Margin="10,0,0,0"
                        Foreground="#FF858585"
                        Text="{Binding Post.Name}" />
                </StackPanel>

            </StackPanel>

        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="HeaderTemplate">
        <StackPanel>
            <TextBlock
                FontFamily="Arial"
                FontSize="18"
                Text="{Binding}"
                TextWrapping="WrapWholeWords" />
        </StackPanel>
    </DataTemplate>

